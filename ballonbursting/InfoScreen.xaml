<Window x:Class="ballonbuster.InfoScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ballonbuster"
        mc:Ignorable="d"
        Title="Information" Height="200" Width="450" ShowInTaskbar="False" Background="#02FFFFFF" BorderThickness="0"
        VerticalAlignment="Center" VerticalContentAlignment="Center" AllowsTransparency="True"   WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize">
    <Grid>
               <Label Content="Bubble Bursting" Name="lblMessage"  FontFamily="Snap ITC" FontSize="20" FontStretch="Normal"  Height="60" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,20,0,0">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF0E1123" Offset="0"/>
                    <GradientStop Color="#FF1A3DDA" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
    </Grid>
</Window>
